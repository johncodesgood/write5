
body {
  background-color: #FFFFFB;
  margin-top: 0px;
  margin-left: 0px;
  margin-right: 0px;
  margin-bottom: 0px;

}


.navigation { /* leaving option for gradient open */
    @include background(linear-gradient( #F2F2F2,#FFFFFB) left repeat);
   height: 50px;
   text-align: right;
   padding-right: 5px;
   padding-top: 5px;

}

.landing {
  height: 500px;
  color: #FFFFFB;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background: url(image-path('niteowl.jpg')) no-repeat center center fixed;
  background-size: cover;

}

.landing-text {
  text-align: center;
  margin-right: 200px;
  margin-left: 200px;
  font-size: 24px;

}

.shaming {
  margin-bottom: 50px;
  box-shadow:none;

}

div.shaming:hover, div.current-week:hover, div.previous-week:hover {
  -moz-box-shadow: 0 0 5px rgba(255,0,0,0.5);
  -webkit-box-shadow: 0 0 5px rgba(255,0,0,0.5);
  box-shadow: 0 0 5px rgba(255,0,0,0.5);

 }


.current-week {
    margin-bottom: 50px;

  }

.current-week table td {
    padding: 20px;

}


.finish {
  background: url(image-path('finish.jpg')) no-repeat center center ;
  height: 300px;
  margin-right: 20px;
  margin-left: 20px;

}

.peerpressure {
  background: url(image-path('keeppp.jpg')) no-repeat center center;
  height: 250px;
  margin-right: 190px;
  margin-left: 190px;

}

.tagline {
  font-weight: 550;
  padding-left: 5px;
  margin-top: 420px;

}

.nitewriter {
  padding-top: 6px;
  padding-left: 6px;

} 

.headline {
  color: darkred;
}

